<div class="custom-form">
  <div class="form-header">
    <h2 class="form-title">üìù Product Form</h2>
  </div>
  <%= form_with model: product, html: { class: "unique-form" } do |form| %>

    <!-- Name Field -->
    <div class="form-group">
      <label class="form-label" for="name">
        <i class="icon-user"></i> Product Name
      </label>
      <%= form.text_field :name, class: "form-input styled-input", placeholder: "Enter product name" %>
    </div>

    <!-- Description Field -->
    <div class="form-group">
      <label class="form-label" for="description">
        <i class="icon-description"></i> Product Description
      </label>
      <%= form.rich_text_area :description, class: "form-textarea styled-textarea", placeholder: "Provide a detailed description" %>
    </div>

    <!-- Featured Image Field -->
    <div class="form-group">
      <label class="form-label" for="featured_image">
        <i class="icon-image"></i> Upload Featured Image
      </label>
      <%= form.file_field :featured_image, accept: "image/*", class: "form-file styled-file" %>
    </div>

    <!-- Inventory Count Field -->
    <div class="form-group">
      <label class="form-label" for="inventory_count">
        <i class="icon-count"></i> Inventory Count
      </label>
      <%= form.number_field :inventory_count, class: "form-input styled-input", placeholder: "Enter inventory count" %>
    </div>

    <!-- Submit and Cancel Buttons -->
    <div class="form-actions">
      <%= form.submit "Save Product", class: "form-button save-button" %>
      <%= link_to "Cancel", @product, class: "cancel-link" %>
    </div>

  <% end %>
</div>
